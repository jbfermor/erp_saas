<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark text-center">
    <tr>
      <th>Banco</th>
      <th>IBAN</th>
      <th>SWIFT</th>
      <th>Principal</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
  <% unless @bank_infos.empty? %>
    <% @bank_infos.each do |bank_info| %>
      <tr>
        <td><%= bank_info.bank_name %></td>
        <td><%= bank_info.iban %></td>
        <td><%= bank_info.swift %></td>
        <td><%= bank_info.is_default %></td>
        <td>
          <%= button_to "Eliminar", entity_bank_infos_path(@entity, bank_info.id), method: :delete, class: "btn btn-sm btn-danger"%>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="5" class="text-center">
        <%= link_to "Añadir información bancaria", new_entity_bank_info_path(entity_id: @entity.id),
          class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
        <p class="text-gray-500 italic">No hay información bancaria registrada.</p>
      </td>
    </tr>
   
  <% end %>
  </tbody>
</table>