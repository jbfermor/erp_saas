<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Usuarios de <%= current_tenant_user.company %></h1>
    <%= link_to "Nuevo usuario", new_user_path, class: "btn btn-primary" %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>Rol</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.role&.name || "—" %></td>
          <td class="text-end">
            <%= link_to "Editar", edit_user_path(user), class: "btn btn-sm btn-warning" %>
            <%= button_to "Eliminar",user_path(user), 
              method: :delete,
              data: { confirm: "¿Eliminar usuario?" },
              class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
