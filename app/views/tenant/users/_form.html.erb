<%= form_with model: @user,
              url: @user.new_record? ? users_path : user_path(@user),
              method: @user.new_record? ? :post : :patch,
              local: true do |f| %>

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :role_id, "Rol", class: "form-label" %>
    <%= f.collection_select :role_id, @roles, :id, :name,
          { prompt: "Selecciona un rol" },
          { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    <% if user.persisted? %>
      <div class="form-text">DÃ©jalo en blanco para no cambiarlo.</div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-success" %>
<% end %>
