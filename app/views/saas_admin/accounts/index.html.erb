<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Accounts</h3>
  <%= link_to "Nueva Account", new_saas_admin_account_path, class: "btn btn-primary" %>
</div>

<table class="table table-hover shadow-sm">
  <thead class="table-dark">
    <tr>
      <th>Nombre</th>
      <th>Slug</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |acc| %>
      <tr>
        <td><%= acc.name %></td>
        <td><%= acc.slug %></td>
        <td class="text-end">
          <%= link_to "Ver", saas_admin_account_path(acc), class: "btn btn-sm btn-secondary" %>
          <%= link_to "Editar", edit_saas_admin_account_path(acc), class: "btn btn-sm btn-warning" %>
          <%= button_to "Eliminar", saas_admin_account_path(acc),
                      method: :delete,
                      data: { confirm: "Â¿Eliminar account?" },
                      class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
