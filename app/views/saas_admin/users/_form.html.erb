<%= form_with model: @user,
              url: @user.new_record? ? saas_admin_users_path : saas_admin_user_path(@user),
              method: @user.new_record? ? :post : :patch,
              local: true do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :saas_role_id, "Rol", class: "form-label" %>
    <%= f.collection_select :saas_role_id, Saas::Role.all, :id, :name,
          { prompt: "Selecciona un rol" },
          { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    <% if user.persisted? %>
      <div class="form-text">DÃ©jalo en blanco para no cambiarlo.</div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-success" %>
<% end %>
